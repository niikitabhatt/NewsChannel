<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">
    <EditTextPreference
        android:defaultValue="@string/settings_interest_default"
        android:inputType="text"
        android:key="@string/settings_interest_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_interest_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_page_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_page_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_page_label" />
</PreferenceScreen>
